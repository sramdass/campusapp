<!DOCTYPE html>
<html>
<head>
  <title><%= title(@title) %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="page_container">
	<p id="flash_messages">
  		<%= render 'shared/flash_messages' %>
  	</p>
  <% if current_profile %>
    <%= link_to current_profile.user.name, dashboard_path %> | <%= link_to "Sign out", log_out_path %>
  <% end %>
  <%= yield %>
</div>  

</body>
</html>
