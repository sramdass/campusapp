<div id="main-column">		
	<%= form_tag sessions_path do %>
		<table class="form-table">
		    <tbody>	
				<tr>
					<td> <%= label_tag :login, 'ID Number' %> </td>
					<td> <%= text_field_tag :login, params[:login] %> </td>
				</tr>
				<tr>
					<td> <%= label_tag :password %> </td>
					<td> <%= password_field_tag :password %> </td>
				</tr>
				<tr><td colspan='2'><%= link_to "forgotten password?", new_password_reset_path %></td></tr>
				<tr><td><%= link_to "Sign Up", sign_up_path %></td></tr>			
			</tbody>
		</table>				
		<p class="field">
			<%= check_box_tag :remember_me, 1, params[:remember_me] %>
			<%= label_tag :remember_me %>
		</p>
		<p> <%= submit_tag "Log in" %></p>
	<% end %>
</div>