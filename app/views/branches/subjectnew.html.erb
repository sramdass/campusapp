<%= debug params %>
<%= form_for([@branch], { :url => { :action => "subjectcreate" } }) do |f| %>	
    <%= render 'shared/error_messages', :target => @branch %>
	<table class="input_form_table">
		<thead>
	    	<tr>
	    		<!--All the required fields for the Subject model should come here-->
	        	<th scope="col">Name</th>
	        </tr>
	    </thead>
	    <tbody>		
		<%= f.fields_for :subjects do |builder| %>	
	 		<%= render "subject_fields", :f => builder %>	 	  
		<% end %>
	    </tbody>		
	</table>			
 	<p class='add-button'> <%= link_to_add_fields "Add Subject", f, :subjects %> </p>
 	<p class='button'> <%= f.submit  "Update Subjects" %>  </p>
<% end %>
