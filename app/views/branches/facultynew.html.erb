<%= form_for([@branch], { :url => { :action => "facultycreate" } }) do |f| %>	
    <%= render 'shared/error_messages', :target => @branch %>
	<table class="input_form_table">
		<thead>
	    	<tr>
	    		<!--All the required fields for the Faculty model should come here-->
	        	<th scope="col">Name</th>
	            <th scope="col"> ID Number </th>
	            <th scope="col">Gender</th>
	            <th scope="col">Delete</th>            
	        </tr>
	    </thead>
	    <tbody>		
		<%= f.fields_for :faculties do |builder| %>	
	 		<%= render "faculty_fields", :f => builder %>	 	  
		<% end %>
	    </tbody>		
	</table>			
 	<p class='add-button'> <%= link_to_add_fields "Add Faculty", f, :faculties %> </p>
 	<p class='button'> <%= f.submit  "Update Faculties" %>  </p>
<% end %>
