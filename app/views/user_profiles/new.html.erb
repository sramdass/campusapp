<div id="main-column">	
	<p class='heading'> Sign Up </p>
	<%= form_for @profile do |f| %>
		<%= render 'shared/error_messages', :target => @profile %>	  	
		<table>
		    <tbody>	
				<tr>
					<td> 
						<strong><%= f.label :login, 'ID Number' %> </strong><br>
					 	<%= f.text_field :login %> 
					 </td>
				</tr>
				<tr>
					<td> 
						<strong><%= f.label :password %></strong> <br>
						<%= f.password_field :password %>
					</td>			 	
				</tr>
				<tr>
					<td> 
						<strong><%= f.label :password_confirmation %></strong><br />
						<%= f.password_field :password_confirmation %>
					</td>
				</tr>			
				<tr>
					<td colspan='2' class='button'> <br><%= submit_tag "Sign Up" %> </td>
				</tr>
			</tbody>
		</table>
	<% end %>
</div>	

