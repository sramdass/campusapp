<%= form_for([@resource], { :url => { :action => "resource_typecreate" } }) do |f| %>	
    <%= render 'shared/error_messages', :target => @resource %>
	<table class="input_form_table">
		<thead>
	    	<tr>
	    		<!--All the required fields for the ResourceType model should come here-->
	        	<th scope="col">Name</th>
	            <th scope="col">Delete</th>            
	        </tr>
	    </thead>
	    <tbody>		
		<%= f.fields_for :resource_types do |builder| %>	
	 		<%= render "resource_type_fields", :f => builder %>	 	  
		<% end %>
	    </tbody>		
	</table>			
 	<p class='add-button'> <%= link_to_add_fields "Add Resource Type", f, :resource_types %> </p>
 	<p class='button'> <%= f.submit  "Update Types" %>  </p>
 	<p> <%= link_to "Cancel and go back to the resource", resource_path(@resource) %>
 	<p> <%= link_to "Cancel and go back to the resources index ", resources_path %>
<% end %>
